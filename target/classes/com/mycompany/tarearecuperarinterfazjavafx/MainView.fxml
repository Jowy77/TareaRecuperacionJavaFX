<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.mycompany.tarearecuperarinterfazjavafx.MainViewController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" stylesheets="@loginStyle.css">
         <center>
            <ImageView fitHeight="318.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
         </center>
         <top>
            <MenuBar id="menubar" prefHeight="31.0" prefWidth="600.0" BorderPane.alignment="BOTTOM_CENTER">
              <menus>
                <Menu id="menuitem" mnemonicParsing="false" text="Perfil">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#abrirPerfil" text="Ver perfil" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Entrenamentos">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#abrirEntrenamientos" text="Ver entrenamientos" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Dietas">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#abrirDietas" text="Ver dietas" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Salir">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#salir" text="Salir" />
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
